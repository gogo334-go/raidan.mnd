        // Ù…Ù„Ø¡ Ø§Ù„ØªÙˆÙ‚ÙŠØ¹ ØªÙ„Ù‚Ø§Ø¦ÙŠØ§Ù‹
        document.getElementById('employeeName').addEventListener('blur', function() {
            if (this.value && !document.getElementById('signature').value) {
                document.getElementById('signature').value = this.value;
            }
        });
        
        // ØªØ¹ÙŠÙŠÙ† ÙˆÙ‚Øª Ø§Ù„Ø§Ù†ØµØ±Ø§Ù ØªÙ„Ù‚Ø§Ø¦ÙŠØ§Ù‹
        document.getElementById('attendanceTime').addEventListener('change', function() {
            if (this.value) {
                const [hours, minutes] = this.value.split(':').map(Number);
                let departureHours = hours + 8;
                if (departureHours >= 24) departureHours -= 24;
                
                const departureTime = document.getElementById('departureTime');
                if (!departureTime.value) {
                    departureTime.value = `${departureHours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
                }
            }
        });
    </script>
